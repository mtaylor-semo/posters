\setbeamercolor{headline}{fg=semo_red,bg=white}
\setbeamercolor{footline}{fg=semo_red, bg=white}
\setbeamerfont{footline}{size=\large}
\setbeamercolor{separation line}{bg=semo_red}
\setbeamercolor{title in headline}{fg=semo_red}
\setbeamercolor{author in headline}{fg=rich_black}
\setbeamercolor{institute in headline}{fg=rich_black}

\setbeamercolor{framesubtitle}{fg=white, bg=semo_red}
\setbeamercolor{author in head/foot}{fg=semo_red, bg=white}
\setbeamercolor{title in head/foot}{fg=white, bg=white}

\setbeamercolor*{normal text}{fg=rich_black, bg=white}
\setbeamercolor*{block body}{fg=rich_black, bg=white}
\setbeamercolor*{block title}{fg=white,bg=river}
\setbeamerfont{block title}{size=\large,series=\bf, shape=\sc}
\setbeamercolor{upper separation line head}{fg=semo_red}

\setbeamercolor*{example body}{fg=rich_black,bg=white}
\setbeamercolor*{example text}{fg=rich_black,bg=white}
\setbeamercolor*{example title}{bg=river,fg=white}

\setbeamercolor{alerted text}{fg=semo_red}

\setbeamercolor{structure}{fg=semo_red}

\setbeamertemplate{itemize items}[triangle]

\setbeamertemplate{navigation symbols}{}  % no navigation on a poster



%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
	\vskip.75ex
	\begin{beamercolorbox}[rounded=true,dp={1ex},colsep*=0ex]{block title}%
		\usebeamerfont*{block title}\vfill\hskip1ex\insertblocktitle
	\end{beamercolorbox}%

	{\ifbeamercolorempty[bg]{block body}{}{}}%
	
	\usebeamerfont{block body}%
	
	\begin{beamercolorbox}[rounded=true,colsep*=0ex,vmode]{block body}%
		\justifying\ifbeamercolorempty[bg]{block body}{}{}\vbox{}%
} %end block begin

	\setbeamertemplate{block end}{
	\end{beamercolorbox}
} %end block end



%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{  
\leavevmode

\begin{beamercolorbox}[wd=\paperwidth]{headline}
	\begin{columns}[t]

		\begin{column}{\sepwid} 
		\end{column}
	
		\begin{column}{\threecolwid}
			\vskip5ex
			\raggedleft
			\usebeamercolor{title in headline} {\color{fg}\textbf{\huge{\inserttitle}}\vskip3ex}%\\[6ex]}
        
			\usebeamercolor{author in headline} {\color{fg}\LARGE{\scshape\insertauthor}\\[1ex]}
        
			\usebeamercolor{institute in headline} {\color{fg}\Large{\insertinstitute}}%\\[1ex]}  
           
		\end{column}

%		\begin{column}{\sepwid}
%		\end{column}

		\begin{column}{\onecolwid}
			\vskip0.5cm
			\begin{center}
				\includegraphics[width=.8\linewidth]{semo_logo_red_black}
			\end{center}
			\vskip1.5cm
		\end{column}
		\begin{column}{\sepwid}
		\end{column}
	\end{columns}
\end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}


